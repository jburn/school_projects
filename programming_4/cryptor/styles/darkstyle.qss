/*QPushButton section*/
QPushButton {
    background-color: #064858;
    padding: 15px;
    font-size: 26px;
    color:#ffffff;
    border-style: outset;
    border-width: 2px;
    border-radius: 4px;
    border-color: #04343f;
}
QPushButton::hover {
    background-color: #174E5C;
}
QPushButton::pressed {
    background-color: #0e6277;
    border-style: inset;
    border-width: 2px;
    border-radius: 4px;
}
QPushButton::menu-indicator {
    subcontrol-position: bottom right;
    width: 60px;
    height: 60px;
}
QPushButton#encrypt_tab_btn {
    image: url(../images/crypt_dark.png);
    border-color: darkslategray;
    border-width: 4px;
    border-top-left-radius: 30px;
    border-top-right-radius: 1px;
    border-bottom-left-radius: 30px;
    border-bottom-right-radius: 1px; 
}
QPushButton#encrypt_tab_btn::hover {
    background-color: #174E5C;
}
