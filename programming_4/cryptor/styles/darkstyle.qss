/*Main Window section*/
QMainWindow {
    background-color: #29363c;
    border: none;
}


/*QWidget section*/
QWidget {
    background-color: #29363c;
}


/*QLabel section*/
QLabel {
    color: #ffffff;
    font-size: 18px;
}
#large_label {
    color: #ffffff;
    font-size: 20px;
}
#title_label {
    font-size: 40px;
    border: none;
    font: bold;
    color: #ffffff;
}


/*QTabWidget section*/
QTabWidget {
    background-color: #384a53;
    border: none;
}


/*QTabBar section*/
QTabBar::tab {
    width: 0;
    height: 0;
    margin: 0;
    padding: 0;
    border: none;
}
QTabBar::tab:selected {
    background: #4b4747;
}


/*QListWidget section*/
QListWidget {
    color: #3a3535;
    background-color: #1c4255;
    color: #989c9e;
    border: none;
}
QListWidget::item:selected {
    background-color: #205247;
    font: bold;
}


/*QMenu section */
QMenu {
    background-color: #677780;
    color:#ffffff;
    width: 500px;
    background-color: #677780;
    font-size: 26px;
}
QMenu::separator {
    height: 2px;
    background: lightblue;
    margin-left: 10px;
    margin-right: 5px;
}
QMenu::indicator {
    width: 16px;
    height: 16px;
}

QMenu#lang_menu {
    width: 574px;
    background-color: #677780;
}
QMenu#lang_menu::item {
    font-size: 26px;
    padding-bottom: 2px;
    padding-left: 250px;
}
QMenu#lang_menu::item:selected {
    border-color: darkslategrey;
    background-color: #257CFD;
    background: rgba(100, 100, 100, 150);
    font: bold;
}

