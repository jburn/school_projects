}

/*QPushbutton section*/
QPushButton {
    background-color: #84b5fd;
    padding: 15px;
    font-size: 26px;
    border-style: outset;
    border-width: 2px;
    border-radius: 4px;
    border-color: darkslategray;
}
QPushButton::hover {
    background-color: #99c1fd;
}
QPushButton::pressed {
    background-color: #408cfb;
    border-style: inset;
    border-width: 2px;
    border-radius: 4px;
    border-color: gray;
}
QPushButton::menu-indicator {
    subcontrol-position: bottom right;
    width: 60px;
    height: 60px;
}
QPushButton#encrypt_tab_btn {
    image: url(../images/crypt_light.png);
    border-color: darkslategray;
    border-width: 4px;
    border-top-left-radius: 30px;
    border-top-right-radius: 1px;
    border-bottom-left-radius: 30px;
    border-bottom-right-radius: 1px; 
}
QPushButton#encrypt_tab_btn::hover {
