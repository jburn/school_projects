/*QMainWindow section*/
QMainWindow {
    background-color: #e7f3fd;
    border: none;
}


/*QWidget section*/
QWidget {
    background-color: #e7f3fd;
}


/*QLabel section*/
QLabel {
    font-size: 18px;
}
QLabel#large_label {
    font-size: 20px;
}
QLabel#title_label {
    font-size: 40px;
    border: none;
    font: bold;
}


/*QTabWidget section*/
QTabWidget {
    border: none;
    padding: 0px;
}


/*QTabBar section*/
QTabBar::tab {
    width: 0;
    height: 0;
    margin: 0;
    padding: 2px;
    border: none;
}


/*QListWidget section*/
QListWidget {
    background-color: #84b5fd;
}
QListWidget::item:selected {
    background-color: #2ABf9E;
    font: bold;
}


/*QMenu section */
QMenu {
    margin: 2px;
    width: 500px;
    background-color: #A3C8FF;
}
QMenu::item {
    font-size: 24px;
}
QMenu::item:selected {
    border-color: darkslategrey;
    background-color: #257CFD;
    background: rgba(100, 100, 100, 150);
    font: bold;
}


